# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sportify_ai
DB_HOST=localhost
DB_PORT=5432
DB_USER=sportify_user
DB_PASSWORD=your_secure_password
DB_NAME=sportify_ai

# Vector Database (Weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_key

# LLM Configuration
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1024

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d

# News Ingestion
NEWS_INGEST_INTERVAL_MINUTES=60
NEWS_SOURCES=espn,skysports,goal,transfermarkt
SUPPORTED_LANGUAGES=en,ar,de

# Ranking
RANKING_UPDATE_INTERVAL_MINUTES=30
CONFIDENCE_THRESHOLD=0.6

# API Keys for News Sources
ESPN_API_KEY=optional
TRANSFERMARKT_SCRAPER_KEY=optional
